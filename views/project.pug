extends layout.pug

block content 
  if projects[id-1]
    nav.grid-container.portfolio-breadcrumb
      a(href='/') ‚Üê Back
    article.grid-container.portfolio-intro.portfolio-project
      .grid-x
        .cell.small-6.medium-9.large-9

          //- Use interpolation to dynamically add the project title.
          h1= projects[id-1].project_name

          //- Use interpolation to dynamically add the project description.
          p.lead.text-light= projects[id-1].description

        .cell.portfolio-meta.small-6.medium-2.large-3
          h6 Technologies

          //- Use an `each` iterator to replace the li tags below and interpolation to dynamically add the technologies used in each project.
          ul
            each tech in projects[id-1].technologies
              li= tech
            

          //- Use template literals and interpolation to add URLs to the hrefs below so they link to the repo and the live version of each project.
          a.button.expanded(href=`${projects[id-1].live_link}`, target="_blank") Live Demo
          a.button.expanded(href=`${projects[id-1].github_link}`, target="_blank") GitHub Repo
      
      //- Replace the URLs in the src attributes below with template literals and interpolation to dynamically add three project images.  You only have to add one image.  But adding more images to show your app in different states demonstrates a level of thoroughness and professionalism that potential employers will like to see. 
      each screenshot in projects[id-1].image_url[1]
        .box
          img.image(src=`${screenshot}`, width=1200, height=1200)